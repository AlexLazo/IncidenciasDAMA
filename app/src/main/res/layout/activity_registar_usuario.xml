<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baack"
    android:scrollbarThumbHorizontal="@drawable/editext_background"
    tools:context=".RegistarUsuarioActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Estado"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rol" />

    <Spinner
        android:id="@+id/rol"
        style="?attr/spinnerDropDownItemStyle"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Spinner
        android:id="@+id/estado"
        style="?attr/spinnerDropDownItemStyle"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textjudul"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:hint="Password"
        android:inputType="textPersonName|textPassword"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toEndOf="@+id/txtuser"
        app:layout_constraintTop_toBottomOf="@+id/txtnombre" />

    <EditText
        android:id="@+id/txtuser"
        android:layout_width="147dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textjudul"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:hint="User"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnombre"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/txtnombre"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:hint="Nombre Completo"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="Registro de usuarios"
        android:textAlignment="center"
        android:textColor="#F6F0F0"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnmodificar"
        android:layout_width="229dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/editext_background"
        android:fontFamily="@font/poppins"
        android:text="Registrar"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estado" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        android:text="Rol"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtuser" />

</androidx.constraintlayout.widget.ConstraintLayout>